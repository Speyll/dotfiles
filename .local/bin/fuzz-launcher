#!/bin/sh

# Define the menu options with emojis
options="ðŸ–¥ï¸ Terminal\nðŸ—ƒï¸ Explorer\nðŸŒ Browser\nðŸ“¦ Apps\nâš™ï¸ Utils\nðŸ”Œ Power"

# Display the menu and get the user's choice
choice=$(echo "$options" | fuzzel -d -f monospace:size=14 -w 12 -l 6 -a center)

# Function to launch the chosen application
launch_app() {
    command -v "$1" >/dev/null 2>&1 && exec "$@" || { echo "$1 not found" >&2; exit 1; }
}


# Check the user's choice and call the respective functions
case "$choice" in
    "ðŸ–¥ï¸ Terminal")
        launch_app foot
        ;;
    "ðŸ—ƒï¸ Explorer")
        launch_app pcmanfm-qt
        ;;
    "ðŸŒ Browser")
        launch_app flatpak run io.gitlab.librewolf-community
        ;;
    "ðŸ“¦ Apps")
        launch_app fuzzel
        ;;
    "âš™ï¸ Utils")
        launch_app fuzz-utils
        ;;
    "ðŸ”Œ Power")
        launch_app fuzz-power
        ;;
    *)
        echo "Invalid choice: $choice" >&2
        exit 1
        ;;
esac
